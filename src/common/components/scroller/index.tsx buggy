import { FC, ReactNode } from "react";
import Scroll, { CustomScrollProps } from "react-custom-scroll";

import { useDispatch } from "react-redux";
import { setHeaderBorder } from "../../../setup/site-manager";

type Props = CustomScrollProps & {
    children: ReactNode;
};

const Scroller: FC<Props> = ({ children, ...props }) => {
    const dispatch = useDispatch();

    const onScroll = (e: any) => {
        if (e.currentTarget.scrollTop === 0 ?? e.currentTarget.scrollTop < 100) {
            dispatch(setHeaderBorder(false));
        } else {
            dispatch(setHeaderBorder(true));
        }
    };

    return (
        <Scroll onScroll={onScroll} {...props}>
            {children}
        </Scroll>
    );
};

export default Scroller;
